<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when spinner is pressed/opened -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background with highlight -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_blue_50"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="@color/primary_blue"/>
                </shape>
            </item>
            <!-- Rotated arrow icon -->
            <item android:gravity="end|center_vertical" android:right="12dp">
                <rotate
                    android:fromDegrees="0"
                    android:toDegrees="180"
                    android:pivotX="50%"
                    android:pivotY="50%">
                    <vector android:width="24dp" android:height="24dp"
                        android:viewportWidth="24" android:viewportHeight="24"
                        android:tint="@color/primary_blue">
                        <path android:fillColor="@color/primary_blue"
                            android:pathData="M7,10l5,5 5,-5z"/>
                    </vector>
                </rotate>
            </item>
        </layer-list>
    </item>

    <!-- State when spinner is focused -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_blue_50"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="@color/primary_blue"/>
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="12dp">
                <vector android:width="24dp" android:height="24dp"
                    android:viewportWidth="24" android:viewportHeight="24"
                    android:tint="@color/primary_blue">
                    <path android:fillColor="@color/primary_blue"
                        android:pathData="M7,10l5,5 5,-5z"/>
                </vector>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_blue_50"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/light_blue_200"/>
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="12dp">
                <vector android:width="24dp" android:height="24dp"
                    android:viewportWidth="24" android:viewportHeight="24"
                    android:tint="@color/primary_blue">
                    <path android:fillColor="@color/primary_blue"
                        android:pathData="M7,10l5,5 5,-5z"/>
                </vector>
            </item>
        </layer-list>
    </item>
</selector>