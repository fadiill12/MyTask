<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">@drawable/spinner_popup_bg</item>
        <item name="android:dropDownSelector">@drawable/spinner_item_selector</item>
        <item name="android:popupAnimationStyle">@style/SpinnerPopupAnimation</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="SpinnerPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dropdown_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dropdown_slide_out</item>
    </style>

</resources>